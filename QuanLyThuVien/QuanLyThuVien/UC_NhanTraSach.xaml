<UserControl x:Class="QuanLyThuVien.UC_NhanTraSach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Nhận trả sách" FontWeight="Bold" Grid.Row="0" Grid.Column="0" FontSize="30" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button x:Name="btnInPhieuTra" Content="Trả sách"  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Click="btnInPhieuTra_Click" />

        <GroupBox x:Name="gb" Header="Thông tin phiếu mượn sách" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="5" FontSize="15" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Mã phiếu mượn" Height="30" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Content="Tên độc giả" Height="30" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Content="Mã sách" Height="30" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>

                <Label Content="Ngày mượn" Height="30" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                <Label Content="Ngày phải trả" Height="30" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"/>
                <Label Content="Ngày trả" Height="30" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>
                
                <Label Content="Tiền phạt kỳ này" Height="30" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center"/>
                <Label Content="Số tiền trả" Height="30" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center"/>
                <Label Content="Còn lại" Height="30" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center"/>
                
                <TextBox x:Name="txbMaPhieuMuon" Height="30" Grid.Row="0" Grid.Column="1" TextChanged="txbMaPhieuMuon_TextChanged"/>
                <TextBlock x:Name="tblHoVaTen" Height="30" Grid.Row="1" Grid.Column="1"/>
                <TextBlock x:Name="tblMaSach" Height="30" Grid.Row="2" Grid.Column="1"/>

                <DatePicker x:Name="dpNgayMuon" Height="30" Grid.Row="0" Grid.Column="3"/>
                <DatePicker x:Name="dpNgayPhaiTra"  Grid.Row="1" Grid.Column="3"/>
                <DatePicker x:Name="dpNgayTra" Height="30" Grid.Row="2" Grid.Column="3" SelectedDateChanged="dpNgayTra_SelectedDateChanged"/>

                <TextBlock x:Name="tblTienPhatKyNay" Height="30" Grid.Row="0" Grid.Column="5"/>
                <TextBox x:Name="txbSoTienTra"  Height ="30" Grid.Row="1" Grid.Column="5" TextChanged="txbSoTienTra_TextChanged" />
                <TextBlock x:Name="tblConlai" Height ="30" Grid.Row="2" Grid.Column="5" />

            </Grid>
        </GroupBox>
        
        <GroupBox Header="Danh sách phiếu mượn" Grid.Row="7" Grid.RowSpan="6" Grid.ColumnSpan="6" FontSize="15">
            <Grid>
                <DataGrid x:Name="dgvPhieuMuon" IsReadOnly="True"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
