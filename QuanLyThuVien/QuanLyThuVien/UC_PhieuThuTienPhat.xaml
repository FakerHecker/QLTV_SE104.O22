<UserControl x:Class="QuanLyThuVien.UC_PhieuThuTienPhat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>




        <Label Content="Phiếu thu tiền phạt" FontWeight="Bold" Grid.Row="0" Grid.Column="0" FontSize="30" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>


        <Grid Grid.Row="7" Grid.RowSpan="5" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnThemMoi" Content="Thêm mới" Grid.Row="1" Grid.Column="0"  Click="btnThemMoi_Click" Margin="0,0,5,0" />
            <Button x:Name="btnLuu" Content="Lưu"  Grid.Row="1" Grid.Column="1"   Click="btnLuu_Click" Margin="5,0,0,0"  />
            <Button x:Name="btnInPhieuThu" Content="In phiếu thu"  Grid.Row="2" Grid.Column="0"  Click="btnInPhieuThu_Click" Margin="0,0,5,0" />
            <Button x:Name="btnXoa" Content="Xóa"  Grid.Row="2" Grid.Column="1"   Click="btnXoa_Click" Margin="5,0,0,0"  />
        </Grid>

        
        <GroupBox x:Name="gb" Header="Thông tin chi tiết phiếu thu" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="6"  FontSize="15" Margin="0,0,5,0">
            <Grid x:Name="a">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Mã phiếu thu" Height="30" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Content="Mã độc giả" Height="30" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Content="Họ tên" Height="30" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
                <Label Content="Tổng nợ" Height="30" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                <Label Content="Số tiền thu" Height="30" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"/>
                <Label Content="Còn lại" Height="30" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>
                <Label Content="Ngày thu" Height="30" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"/>

                <TextBlock x:Name="tblMaPhieuThu" Height="30" Grid.Row="0" Grid.Column="1"/>
                <ComboBox x:Name="cbMaDocGia" Height="30" Grid.Row="1" Grid.Column="1" SelectionChanged="cbMaDocGia_SelectionChanged">
                </ComboBox>
                <TextBlock x:Name="tblHoTen" Height="30" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0"/>

                <TextBlock x:Name="tblTongNo" Height="30" Grid.Row="0" Grid.Column="3" Margin="0,10,0,0"/>
                <TextBox x:Name="txbSoTienThu" Height="30" Grid.Row="1" Grid.Column="3" TextChanged="txbSoTienThu_TextChanged"/>
                <TextBlock x:Name="tblConLai" Height="30" Grid.Row="2" Grid.Column="3" Margin="0,10,0,0"/>

                <DatePicker x:Name="dpNgayThu"  Grid.Row="3" Grid.Column="1" />
            </Grid>
        </GroupBox>
        
        <GroupBox Header="Danh sách phiếu thu" Grid.Row="1" Grid.Column="3" Grid.RowSpan="11" Grid.ColumnSpan="3" FontSize="15" Margin="5,0,0,0">
            <Grid>
                <DataGrid x:Name="dgvPhieuThuTienPhat" SelectionChanged="dgvPhieuThuTienPhat_SelectionChanged" IsReadOnly="True"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
