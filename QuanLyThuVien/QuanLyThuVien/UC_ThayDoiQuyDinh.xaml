<UserControl x:Class="QuanLyThuVien.UC_ThayDoiQuyDinh"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyThuVien"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Thay đổi quy định" FontSize="30" Grid.ColumnSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" FontSize="15"  Header="Quy định hiện hành" Grid.RowSpan="11" Margin="5,0,5,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Content="1. Thời hạn thẻ" FontSize="15" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Label Content="2. Tuổi tối thiểu" FontSize="15" Grid.Row="1" Grid.ColumnSpan="2"/>
                <Label Content="3. Tuổi tối đa" FontSize="15" Grid.Row="2" Grid.ColumnSpan="2"/>
                <Label Content="4. Khoảng cách năm xuất bản" FontSize="15" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Label Content="5. Số ngày mượn tối đa" FontSize="15" Grid.Row="4" Grid.ColumnSpan="2"/>
                <Label Content="6. Số sách mượn tối đa" FontSize="15" Grid.Row="5" Grid.ColumnSpan="2"/>
                <Label Content="7. Số tiền phạt trên một ngày trả trễ" FontSize="15" Grid.Row="6" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" FontSize="15"  Header="Thay đổi quy định" Grid.RowSpan="11" Margin="5,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Content="Quy định" FontSize="15"/>
                <ComboBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="15" Height="30">
                    <ComboBoxItem Content="Thời hạn thẻ" IsSelected="True"/>
                    <ComboBoxItem Content="Tuổi tối thiểu"/>
                    <ComboBoxItem Content="Tuổi tối đa"/>
                    <ComboBoxItem Content="Khoảng cách năm xuất bản"/>
                    <ComboBoxItem Content="Số ngày mượn tối đa"/>
                    <ComboBoxItem Content="Số sách mượn tối đa"/>
                    <ComboBoxItem Content="Số tiền phạt trên một ngày trả trễ"/>
                </ComboBox>
                <Label Content="Giá trị" Grid.Column="2" FontSize="15"/>
                <TextBox Grid.Column="2" Grid.Row="1" FontSize="15" Height="30"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
